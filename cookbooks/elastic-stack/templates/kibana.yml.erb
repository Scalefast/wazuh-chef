server.host: <%= @host %>
server.port: <%= @port %>
elasticsearch.hosts: [
<% if node['xpack']['enabled'] %>
<% @elasticsearch_hosts.each do |node| %>
  "https://<%= node %>"
<% end %>    
<% else %>
<% @elasticsearch_hosts.each do |node| %>
  "http://<%= node %>"
<% end %>
<% end %>
]
elasticsearch.password: <%= @elasticsearch_password %>

# Elasticsearch from/to Kibana

elasticsearch.ssl.certificateAuthorities: <%= @xpack_ca %>
elasticsearch.ssl.certificate: <%= @xpack_cert %>
elasticsearch.ssl.key: <%= @xpack_key %>

# Browser from/to Kibana
server.ssl.enabled: <%= @ssl_enabled %>
server.ssl.certificate: <%= @xpack_cert %>
server.ssl.key: <%= @xpack_key %>

# Elasticsearch authentication
xpack.security.enabled: <%= @xpack_enabled %>
elasticsearch.username: elastic
server.defaultRoute: /app/wazuh
