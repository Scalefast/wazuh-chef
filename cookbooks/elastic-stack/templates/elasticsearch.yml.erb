network.host: <%= @host %>
http.port: <%= @port %>
node.name: <%= @node_name %>
cluster.name: <%= @cluster_name %>
cluster.initial_master_nodes: [
    <% @initial_master_nodes.each do |node| %>
        "<%= node %>"
    <% end %>
] 

# Transport layer
xpack.security.transport.ssl.enabled: <%= @xpack_enabled %>
xpack.security.transport.ssl.verification_mode: <%= @xpack_ver_mode %>
xpack.security.transport.ssl.key: <%= @xpack_key %>
xpack.security.transport.ssl.certificate: <%= @xpack_cert %>
xpack.security.transport.ssl.certificate_authorities: <%= @xpack_ca %>

# HTTP layer
xpack.security.http.ssl.enabled: <%= @xpack_enabled %>
xpack.security.http.ssl.verification_mode: <%= @xpack_ver_mode %>
xpack.security.http.ssl.key: <%= @xpack_key %>
xpack.security.http.ssl.certificate: <%= @xpack_cert %>
xpack.security.http.ssl.certificate_authorities: <%= @xpack_ca %>

# Elasticsearch authentication
xpack.security.enabled: <%= @xpack_enabled %>

path.data: <%= @path_data %>
path.logs: <%= @path_logs %>
